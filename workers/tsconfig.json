{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "@types/node",
      "@cloudflare/workers-types",
      "./types"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "exclude": [
    "node_modules",
    "types/**/*.ts",
    "test/**/*.ts",
    "e2e/**/*.ts",
    "**/*.test.ts"
  ],
  "include": [
    "htmx/**/*.html",
    "src/**/*.ts"
  ]
}