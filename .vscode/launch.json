  "version": "0.2.0",
  "configurations": [
    {
      "name": "Convert Episode",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/jarchive",
      "args": ["convert", "${input:episodeID}"]
    },
    {
      "name": "Debug convert-all",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${fileDirname}",
      "args": ["convert", "*"]
    }
  ],
  "inputs": [
    {
      "id": "episodeID",
      "type": "promptString",
      "description": "the numeric identity of an episode"
    }
  ]
}